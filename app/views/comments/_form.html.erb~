<%= form_for([@comment.post, @comment]) do |f| %>
			<% if @comment.errors.any?%>
			<div>	
			<h2><%=pluralize(@comment.errors.count,"error")%> preveted this post form saving</h2>
			<ul>
			<%@comment.errors.full_messages.each do |msg|%>
				<li><%=msg%></li>
			<%end%>
			</ul>
			</div>
			<%end%>
		
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<br>
<%= f.label :body %><br>
<%= f.text_area :body %><br>
<br>
<%= f.submit %>
<% end %>
